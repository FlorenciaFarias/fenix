<%- include('../partials/head') %> 
<body>

<%- include('../partials/header') %> 

    

    <main>
        <h1>Login</h1>

        <section class="login">
            <aside>
                <div class="contenedor-login">
                    <h2>¡Hola, de nuevo! :)</h2>
                    <form action="/usuarios/loginProcess" method="POST">

                        <label for="">Ingresá tu E-mail</label>
                        <input type="email" name="email" id="Email" placeholder="ejemplo@ejemplo.com"
                        value="<%= locals.oldData ? oldData.email : null %>"
                        >
                        <% if (locals.errors && errors.email) { %>
                         <p class="msg-error"><%= errors.email.msg %> </p>
                        <% } %>

                        <label for="">Ingresá tu contraseña</label>
                        <input type="password" name="contraseña" id="contraseña" placeholder="*******"
                        value="<%= locals.oldData ? oldData.password : null %>">
                        <% if (locals.errors && errors.password) { %>
                         <p class="msg-error"><%= locals.password.msg %> </p>
                        <% } %>

                        <div class="check">
                            <label for="">¿Recordar usuario?</label>
                            <input type="checkbox" name="recordarUsuario">
                        </div>   
                        
                            <div class="boton-p">

                                <button type="submit">Iniciar sesión</button>
                                <p class="p-register">¿No tenés cuenta? 
                                <a class="boton-registrarse" href="/usuarios/register">¡Registrate!</a>
                                </p>
                                
                               
                            </div>
                    </form>
                </div>
            </aside>
        </section>
    </main>
    <%- include('../partials/footer') %> 
</body>
</html>